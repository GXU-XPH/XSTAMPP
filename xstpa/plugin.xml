<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="xstpa.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="xstpa.Perspective"
            fixed="false"
            icon="icons/logo.png"
            id="xstpa.perspective"
            name="XSTPA">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="xstpa.ui.View"
            icon="icons/xstpa_logo.png"
            id="xstpa.view"
            name="Plugin View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="xstampp.extension.stepEditors">
      <stepPerspective
            id="xstpa.stepPerspective1"
            name="Context Tables"
            parentStep="astpa.navigation.step3_1"
            targetId="xstampp.defaultPerspective">
         <view
               id="xstpa.view">
         </view>
      </stepPerspective>
      <stepEditor
            editorId="xstpa.editor.ruca"
            icon="icons/ruca_logo2x16.png"
            id="xstpa.views.ruca"
            name="Refined Unsafe Control Actions"
            parentStep="astpa.navigation.step3_1">
      </stepEditor>
      <stepEditor
            editorId="xstpa.editor.refinedSC"
            icon="icons/rsc_logox16.png"
            id="xstpa.stepEditor.RefinedSC"
            name="Refined Safety Constraints"
            parentStep="astpa.navigation.step3_1">
      </stepEditor>
      <stepEditor
            editorId="xstpa.editor.ltl"
            icon="icons/ltl.png"
            id="xstpa.stepEditor.ltl"
            name="LTL Formula Table"
            parentStep="astpa.navigation.step3_1">
      </stepEditor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="xstpa.settings.PreferencePageSettings"
            id="xstpa.preferences.choosePath"
            name="XSTPA Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
      <toc
            file="tocconcepts.xml">
      </toc>
      <toc
            file="tocgettingstarted.xml">
      </toc>
      <toc
            file="tocreference.xml">
      </toc>
      <toc
            file="tocsamples.xml">
      </toc>
      <toc
            file="toctasks.xml">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.helpSupport">
      <config
            class="xstpa.AbstractHelpUI1">
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="xstpa.ui.RefinedUCAView"
            default="false"
            icon="icons/ruca_logo2x16.png"
            id="xstpa.editor.ruca"
            name="Refined Unsafe Control Actions">
      </editor>
      <editor
            class="xstpa.ui.RefinedSafetyConstraintsView"
            default="false"
            icon="icons/rsc_logox16.png"
            id="xstpa.editor.refinedSC"
            name="Refined Safety Constraints">
      </editor>
      <editor
            class="xstpa.ui.tables.LTLPropertiesTable"
            default="false"
            icon="icons/ltl.png"
            id="xstpa.editor.ltl"
            name="LTL Formulas">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="xstpa.AbstractServiceFactory:1">
         <service
               serviceClass="xstpa.XstpaService"></service>
      </serviceFactory>
   </extension>

</plugin>
